<?xml version="1.0" encoding="utf-8" ?>
<baseviews:ViewBase 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:TubePlayer.ViewModels"
    xmlns:baseviews="clr-namespace:TubePlayer.Views.Base"
    xmlns:models="clr-namespace:TubePlayer.Models"
    xmlns:controls="clr-namespace:TubePlayer.ViewControls"
    xmlns:converters="clr-namespace:Maui.Apps.Framework.Converters;assembly=Maui.Apps.Framework"
    x:Class="TubePlayer.Views.VideoDetailsPage"
    x:TypeArguments="viewmodels:VideoDetailsPageViewModel"
    x:DataType="viewmodels:VideoDetailsPageViewModel"
    PageTitle="{Binding Title, Mode=OneWay}"
    PageMode="Navigate"
    ContentDisplayMode="NavigationBar"
    x:Name="RootPage">

    <baseviews:ViewBase.Resources>
        <converters:EnumerationContainsElementConverter x:Key="cvtVisibleOnItemCount" />
    </baseviews:ViewBase.Resources>
    
    <baseviews:ViewBase.PageContent>

        <Grid
            RowDefinitions="160,Auto,Auto,Auto,Auto,Auto,*,56"
            RowSpacing="12"
            Margin="16,0"
            IsVisible="{Binding DataLoaded, Mode=OneWay}"
            IgnoreSafeArea="True">
            
            <!-- Top area with poster -->
            <Frame
                HasShadow="True"
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                IsClippedToBounds="True"                
                Padding="0"
                Grid.Row="0"
                Opacity="0"
                x:Name="HeaderView">

                <Grid
                    IsClippedToBounds="True"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill">
                    
                    <!-- Poster image -->
                    <Image 
                        VerticalOptions="Fill"
                        HorizontalOptions="Fill" 
                        Aspect="AspectFill"
                        Margin="0">
                        <Image.Source>
                            <UriImageSource 
                                Uri="{Binding TheVideo.Snippet.Thumbnails.High.Url, Mode=OneWay}"
                                CacheValidity="1:00:00.0"/>
                        </Image.Source>
                    </Image>
                    
                    <!-- Duration -->
                    <Border
                        Padding="8"
                        VerticalOptions="End"
                        HorizontalOptions="End"
                        Margin="8"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 4"
                        BackgroundColor="{StaticResource DarkColor}">
                        <Label 
                            Text="{Binding TheVideo.VideoDuration, Mode=OneWay}"
                            Style="{StaticResource MediumLightText10}"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center" />
                    </Border>
                </Grid>                
            </Frame>
            
            <!-- Video Title -->
            <VerticalStackLayout
                x:Name="VideoTitle"
                Grid.Row="1"
                HorizontalOptions="Fill"
                Opacity="0"
                Spacing="2">

                <Label 
                    Style="{StaticResource MediumLightText20}"
                    Text="{Binding TheVideo.Snippet.Title, Mode=OneWay}"/>

                <Label 
                    Style="{StaticResource RegularLightText14}"
                    Text="{Binding TheVideo.VideoSubtitle, Mode=OneWay}" />
            </VerticalStackLayout>
            
            <!-- Icons -->
            <!-- <FlexLayout 
                x:Name="VideoIcons"
                Grid.Row="2"
                HorizontalOptions="Fill"
                Opacity="0"
                Direction="Row"
                JustifyContent="SpaceBetween"
                AlignContent="Stretch"
                Margin="0,8"> -->
            <!-- TODO: Use FlexLayout instead of Grid in future versions. Currently, it is not working as expected -->
            <Grid 
                x:Name="VideoIcons"
                Grid.Row="2"
                HorizontalOptions="Fill"
                Opacity="0"                
                Margin="0,8"
                ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto">
                
                
                <!-- Likes -->
                <HorizontalStackLayout
                    Grid.Column="0"
                    Spacing="6"
                    VerticalOptions="Center">

                    <Image 
                        Source="imglike.png"
                        WidthRequest="16"
                        HeightRequest="16" />

                    <Label 
                        Style="{StaticResource RegularLightText14}"
                        Text="{Binding TheVideo.LikesCount, Mode=OneWay}"/>
                </HorizontalStackLayout>

                 <!-- Dislikes --> 
                <HorizontalStackLayout
                    Grid.Column="2"
                    Spacing="6"
                    VerticalOptions="Center">

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding UnlikeVideoCommand, Mode=OneWay}"/>
                    </HorizontalStackLayout.GestureRecognizers>

                    <Image 
                        Source="imglike.png"
                        Rotation="180"
                        WidthRequest="16"
                        HeightRequest="16" />

                    <Label 
                        Style="{StaticResource RegularLightText14}"
                        Text="Unlike"/>
                </HorizontalStackLayout>

                 <!-- Share -->
                <HorizontalStackLayout
                    Grid.Column="4"
                    Spacing="6"
                    VerticalOptions="Center">

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShareVideoCommand, Mode=OneWay}"/>
                    </HorizontalStackLayout.GestureRecognizers>

                    <Image 
                        Source="imgshare.png"                        
                        WidthRequest="16"
                        HeightRequest="16" />

                    <Label 
                        Style="{StaticResource RegularLightText14}"
                        Text="Share"/>
                </HorizontalStackLayout>

                 <!-- Download -->
                <HorizontalStackLayout
                    Grid.Column="6"
                    Spacing="6"
                    HorizontalOptions="Center">

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DownloadVideoCommand, Mode=OneWay}"/>
                    </HorizontalStackLayout.GestureRecognizers>

                    <Image 
                        Source="imgdownload.png"                        
                        WidthRequest="16"
                        HeightRequest="16" />

                    <Label 
                        Style="{StaticResource RegularLightText14}"
                        Text="Download"/>
                </HorizontalStackLayout>
            </Grid>
            
            <!-- Channel Details -->
            <Grid
                x:Name="ChannelDetails"
                Opacity="0"
                Grid.Row="3"
                ColumnSpacing="12"
                ColumnDefinitions="Auto,*,Auto"
                RowDefinitions="Auto, Auto">
                
                <!-- Channel Pic -->
                <Border
                    WidthRequest="44"
                    HeightRequest="44"
                    VerticalOptions="Center"
                    Stroke="{StaticResource LightBorderColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 22"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0">

                    <Image
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="40"
                        HeightRequest="40"
                        Aspect="AspectFill">

                        <Image.Clip>
                            <EllipseGeometry 
                                Center="20,20" 
                                RadiusX="20" 
                                RadiusY="20" />
                        </Image.Clip>

                        <Image.Source>
                            <UriImageSource 
                                Uri="{Binding TheChannel.Snippet.Thumbnails.High.Url, Mode=OneWay}"
                                CacheValidity="1:00:00.0" />
                        </Image.Source>
                    </Image>
                </Border>
                
                <!-- Channel Name -->
                <Label 
                    Style="{StaticResource MediumLightText18}" 
                    Grid.Row="0" 
                    Grid.Column="1"
                    Text="{Binding TheChannel.Snippet.Title, Mode=OneWay}" />
                
                <!-- Subscriber Count -->
                <Label 
                    Style="{StaticResource RegularLightText14}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding TheChannel.SubscribersCount, Mode=OneWay}" />
                
                <!-- Subscribe Button -->
                <Button 
                    Grid.Row="0"
                    Grid.RowSpan="2" 
                    Grid.Column="2" 
                    Padding="12, 0"
                    CornerRadius="6"
                    HeightRequest="32"
                    Text="Subscribe"
                    TextColor="White"
                    FontSize="12"
                    FontFamily="MediumFont"
                    Background="#FF0000"
                    Command="{Binding SubscribeChannelCommand, Mode=OneWay}"/>
            </Grid>

            <!-- Similar Videos -->
            <CollectionView
                x:Name="SimilarVideos"
                Grid.Row="5"
                Opacity="0"
                IsVisible="{Binding SimilarVideos, Mode=OneWay, Converter={StaticResource cvtVisibleOnItemCount}}"
                HeightRequest="140"
                ItemsSource="{Binding SimilarVideos, Mode=OneWay}">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal"
                        ItemSpacing="8" />                    
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <controls:SmallVideoCell 
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>                
            </CollectionView>
            
            <!-- Tags -->
            <CollectionView
                x:Name="TagsView"
                Grid.Row="4"
                Opacity="0"
                IsVisible="{Binding TheVideo.Snippet.Tags, Mode=OneWay, Converter={StaticResource cvtVisibleOnItemCount}}"
                HeightRequest="28"
                ItemsSource="{Binding TheVideo.Snippet.Tags, Mode=OneWay}"
                ItemSizingStrategy="MeasureAllItems">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal"
                        ItemSpacing="16"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            BackgroundColor="{StaticResource DarkColor}"
                            VerticalOptions="Fill"
                            Stroke="{StaticResource LightBorderColor}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 14"
                            Padding="16,0">
                            <Label 
                                Text="{Binding .}"
                                Style="{StaticResource RegularLightText16}"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Description -->
            <ScrollView
                Grid.Row="6"
                x:Name="DescriptionView"
                Opacity="0">
                <Label 
                    HorizontalOptions="Fill"
                    Style="{StaticResource RegularLightText14}"
                    LineBreakMode="WordWrap"
                    Text="{Binding TheVideo.Snippet.Description, Mode=OneWay}"/>
            </ScrollView>
            
            <!-- Comments Button -->
            <Button 
                x:Name="btnComments"
                Grid.Row="7"
                Opacity="0"
                Padding="0"
                Margin="0,0,0,16"
                CornerRadius="8"
                VerticalOptions="Fill"
                HorizontalOptions="Fill"
                Text="Comments"
                TextColor="White"
                FontSize="18"
                FontFamily="MediumFont"
                BorderColor="{StaticResource LightBorderColor}"
                BorderWidth="0.5"
                Background="{StaticResource DarkColor}"/>
        </Grid>
        
    </baseviews:ViewBase.PageContent>
    
</baseviews:ViewBase>